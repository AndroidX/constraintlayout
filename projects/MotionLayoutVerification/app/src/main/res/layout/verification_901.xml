<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/verification_scene_901"
    app:motionDebug="SHOW_PATH"

    android:background="#040C25">



    <ImageView
        android:id="@+id/sun"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/sun"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTag="center"
        />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/moon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/moon"

        app:layout_constraintCircleRadius="30dp"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircle="@id/earth"
        />



    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/earth"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/earth"
        app:motionStagger="1"
        app:layout_constraintTag="hop"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircle="@id/sun"
        />




</androidx.constraintlayout.motion.widget.MotionLayout>
