        android:id="@+id/item2"
        android:layout_width="10dp"
        android:layout_height="30dp"
        app:layout_constraintTag="dart"
        android:rotation="15" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item3"
        android:layout_width="10dp"
        android:layout_height="30dp"
        app:layout_constraintTag="dart"
        android:rotation="30" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item4"
        android:layout_width="10dp"
