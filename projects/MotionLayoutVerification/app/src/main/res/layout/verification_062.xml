<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/verification_scene_062"
    app:motionDebug="SHOW_ALL"
    android:background="#cfc">


    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="This test derivedConstraints, performance (should be smooth), arc mode, stagger, Tap backgrount to animate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/center"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTag="center"
        />
    <androidx.constraintlayout.utils.widget.MotionTelltales
        android:id="@+id/region1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="#FF9999"
        android:text="1"
        app:motionStagger="1"
        app:layout_constraintTag="hop"
        app:layout_constraintCircleRadius="120dp"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircle="@id/center"
        />

</androidx.constraintlayout.motion.widget.MotionLayout>
