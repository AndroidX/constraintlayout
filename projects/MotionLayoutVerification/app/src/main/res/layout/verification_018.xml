<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motionLayout"
    app:layoutDescription="@xml/verification_scene_018"
    android:layout_width="match_parent"
    android:background="#CFC"
    android:layout_height="match_parent">

    <View
        android:id="@+id/button"
        android:background="#A66"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:text="Button"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="230dp" />
    <TextView
        android:id="@+id/button2"
        android:background="#287830"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:text="Z"
        android:gravity="center"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="230dp" />
    <TextView
        android:id="@+id/button3"
        android:background="#7445CC"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:text="X"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="230dp" />
    <TextView
        android:id="@+id/button4"
        android:background="#87702F"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:textColor="#FFFFFF"
        android:text="Y"
        android:gravity="center"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="230dp" />
    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This test rotation with and without piviot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/button30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="OnClick"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.motion.widget.MotionLayout>
