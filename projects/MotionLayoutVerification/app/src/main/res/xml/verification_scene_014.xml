<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="8000">
        <!--        <OnClick motion:clickAction="transitionToEnd|jumpToStart" />-->
        <OnClick motion:clickAction="jumpToStart|transitionToEnd" />
        <KeyFrameSet>
            <!--          button 3    -->

            <KeyCycle
                android:rotation="360"
                motion:framePosition="0"
                motion:motionTarget="@+id/imageFilterButton3"
                motion:waveOffset="0"
                motion:wavePeriod="0"
                motion:waveShape="sawtooth" />
            <KeyCycle
                android:rotation="360"
                motion:framePosition="52"
                motion:motionTarget="@+id/imageFilterButton3"
                motion:waveOffset="0"
                motion:wavePeriod="1"
                motion:waveShape="sawtooth" />
            <KeyCycle
                android:rotation="360"
                motion:framePosition="100"
                motion:motionTarget="@+id/imageFilterButton3"
                motion:waveOffset="0"
                motion:wavePeriod="0"
                motion:waveShape="sawtooth" />

            <!--          button 5    -->

            <KeyCycle
                android:rotation="360"
                motion:framePosition="0"
                motion:motionTarget="@+id/imageFilterButton5"
                motion:waveOffset="30"
                motion:wavePeriod="0"
                motion:waveShape="reverseSawtooth" />
            <KeyCycle
                android:rotation="360"
                motion:framePosition="52"
                motion:motionTarget="@+id/imageFilterButton5"
                motion:waveOffset="30"
                motion:wavePeriod="3"
                motion:waveShape="reverseSawtooth" />
            <KeyCycle
                android:rotation="360"
                motion:framePosition="100"
                motion:motionTarget="@+id/imageFilterButton5"
                motion:waveOffset="30"
                motion:wavePeriod="0"
                motion:waveShape="reverseSawtooth" />

            <KeyCycle
                android:translationX="46dp"
                motion:framePosition="0"
                motion:motionTarget="@+id/imageFilterButton5"
                motion:waveOffset="0"
                motion:wavePeriod="0"
                motion:waveShape="sin" />
            <KeyCycle
                android:translationX="46dp"
                motion:framePosition="52"
                motion:motionTarget="@+id/imageFilterButton5"
                motion:waveOffset="0"
                motion:wavePeriod="2"
                motion:waveShape="sin" />
            <KeyCycle
                android:translationX="46dp"
                motion:framePosition="100"
                motion:motionTarget="@+id/imageFilterButton5"
                motion:waveOffset="0"
                motion:wavePeriod="0"
                motion:waveShape="sin" />

            <KeyCycle
                android:translationY="46dp"
                motion:framePosition="0"
                motion:motionTarget="@+id/imageFilterButton5"
                motion:waveOffset="0"
                motion:wavePeriod="0"
                motion:waveShape="cos" />
            <KeyCycle
                android:translationY="46dp"
                motion:framePosition="52"
                motion:motionTarget="@+id/imageFilterButton5"
                motion:waveOffset="0"
                motion:wavePeriod="2"
                motion:waveShape="cos" />
            <KeyCycle
                android:translationY="46dp"
                motion:framePosition="100"
                motion:motionTarget="@+id/imageFilterButton5"
                motion:waveOffset="0"
                motion:wavePeriod="0"
                motion:waveShape="cos" />

            <!--          button 4    -->

            <KeyCycle
                android:rotation="360"
                motion:framePosition="0"
                motion:motionTarget="@+id/imageFilterButton4"
                motion:waveOffset="0"
                motion:wavePeriod="0"
                motion:waveShape="sawtooth" />
            <KeyCycle
                android:rotation="360"
                motion:framePosition="52"
                motion:motionTarget="@+id/imageFilterButton4"
                motion:waveOffset="0"
                motion:wavePeriod="1"
                motion:waveShape="sawtooth" />
            <KeyCycle
                android:rotation="360"
                motion:framePosition="100"
                motion:motionTarget="@+id/imageFilterButton4"
                motion:waveOffset="0"
                motion:wavePeriod="0"
                motion:waveShape="sawtooth" />

            <KeyCycle
                android:translationX="92dp"
                motion:framePosition="0"
                motion:motionTarget="@+id/imageFilterButton4"
                motion:waveOffset="0"
                motion:wavePeriod="0"
                motion:waveShape="sin" />
            <KeyCycle
                android:translationX="92dp"
                motion:framePosition="52"
                motion:motionTarget="@+id/imageFilterButton4"
                motion:waveOffset="0"
                motion:wavePeriod="2"
                motion:waveShape="sin" />
            <KeyCycle
                android:translationX="92dp"
                motion:framePosition="100"
                motion:motionTarget="@+id/imageFilterButton4"
                motion:waveOffset="0"
                motion:wavePeriod="0"
                motion:waveShape="sin" />

            <KeyCycle
                android:translationY="92dp"
                motion:framePosition="0"
                motion:motionTarget="@+id/imageFilterButton4"
                motion:waveOffset="0"
                motion:wavePeriod="0"
                motion:waveShape="cos" />
            <KeyCycle
                android:translationY="92dp"
                motion:framePosition="52"
                motion:motionTarget="@+id/imageFilterButton4"
                motion:waveOffset="0"
                motion:wavePeriod="2"
                motion:waveShape="cos" />
            <KeyCycle
                android:translationY="92dp"
                motion:framePosition="100"
                motion:motionTarget="@+id/imageFilterButton4"
                motion:waveOffset="0"
                motion:wavePeriod="0"
                motion:waveShape="cos" />

            <!--   #################################   -->
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="10"
                motion:motionTarget="items" />
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="90"
                motion:motionTarget="items" />
        </KeyFrameSet>


    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="text"
                motion:customStringValue="Connect" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="text"
                motion:customStringValue="Disconnect" />
        </Constraint>
        <Constraint
            android:id="@+id/imageFilterButton5"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTag="items"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/imageFilterButton3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTag="items"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>


</MotionScene>