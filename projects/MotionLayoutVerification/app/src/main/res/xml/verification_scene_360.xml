    </ConstraintOverride>

        <ConstraintOverride android:id="@+id/grid"
            android:layout_marginStart="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom= "50dp"
            />
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/state1"
        motion:deriveConstraintsFrom="@id/base">

        <ConstraintOverride motion:motionTarget="hop">
            <CustomAttribute
                motion:attributeName="roundPercent"
                motion:customFloatValue="0" />
        </ConstraintOverride>

        <ConstraintOverride
            android:id="@+id/grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </ConstraintSet>

    <Transition
        motion:constraintSetEnd="@+id/base"
        motion:constraintSetStart="@+id/small"
        motion:duration="1000"
        >
        <OnClick motion:clickAction="toggle"  />

        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="50"
                motion:motionTarget="hop"
                motion:keyPositionType="parentRelative"
                motion:percentX="0.5"
                motion:percentY="0.5" />

            <KeyCycle
                android:translationX="0dp"
                motion:framePosition="0"
                motion:motionTarget="hop"
                motion:wavePeriod="0"
                motion:waveShape="sin" />

            <KeyCycle
                android:translationX="0dp"
                motion:framePosition="15"
                motion:motionTarget="hop"
                motion:wavePeriod="0"
                motion:waveShape="sin" />

            <KeyCycle
                android:translationX="200dp"
                motion:framePosition="75"
                motion:motionTarget="hop"
                motion:wavePeriod="1"
                motion:waveShape="sin" />

            <KeyCycle
                android:translationX="0dp"
                motion:framePosition="100"
                motion:motionTarget="hop"
                motion:wavePeriod="0"
                motion:waveShape="sin" />

            <KeyCycle
                android:translationY="0dp"
                motion:framePosition="0"
                motion:motionTarget="hop"
                motion:wavePeriod="0"
                motion:waveShape="cos" />

