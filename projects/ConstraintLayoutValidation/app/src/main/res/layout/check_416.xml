<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

   <!-- issue #40 -->

   <androidx.gridlayout.widget.GridLayout
       android:paddingBottom="16dp"
       android:id="@+id/keyboardGrid"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       app:columnCount="3"
       app:layout_constraintDimensionRatio="h,1:1.3"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_gravity="center"
       app:rowCount="4"
       tools:ignore="HardcodedText">

      <TextView
          android:id="@+id/n1"
          android:clickable="true"
          android:contentDescription="1"
          android:focusable="true"
          app:layout_rowWeight="1"
          app:layout_columnWeight="1"
          android:gravity="center"
          android:text="1"
          app:layout_column="0"
          app:layout_gravity="fill"
          app:layout_row="0" />

      <TextView
          android:id="@+id/n2"
          android:clickable="true"
          android:contentDescription="2"
          android:focusable="true"
          app:layout_rowWeight="1"
          app:layout_columnWeight="1"
          android:gravity="center"
          android:text="2"
          app:layout_column="1"
          app:layout_gravity="fill"
          app:layout_row="0" />

      <TextView
          android:id="@+id/n3"
          android:clickable="true"
          android:contentDescription="3"
          android:focusable="true"
          app:layout_rowWeight="1"
          app:layout_columnWeight="1"
          android:gravity="center"
          android:text="3"
          app:layout_column="2"
          app:layout_gravity="fill"
          app:layout_row="0" />

      <TextView
          android:id="@+id/n4"
          android:clickable="true"
          android:contentDescription="4"
          android:focusable="true"
          app:layout_rowWeight="1"
          app:layout_columnWeight="1"
          android:gravity="center"
          android:text="4"
          app:layout_column="0"
          app:layout_gravity="fill"
          app:layout_row="1" />

      <TextView
          android:id="@+id/n5"
          android:clickable="true"
          android:contentDescription="5"
          android:focusable="true"
          app:layout_rowWeight="1"
          app:layout_columnWeight="1"
          android:gravity="center"
          android:text="5"
          app:layout_column="1"
          app:layout_gravity="fill"
          app:layout_row="1" />

      <TextView
          android:id="@+id/n6"
          android:clickable="true"
          android:contentDescription="6"
          android:focusable="true"
          app:layout_rowWeight="1"
          app:layout_columnWeight="1"
          android:gravity="center"
          android:text="6"
          app:layout_column="2"
          app:layout_gravity="fill"
          app:layout_row="1" />

      <TextView
          android:id="@+id/n7"
          android:clickable="true"
          android:contentDescription="7"
          android:focusable="true"
          app:layout_rowWeight="1"
          app:layout_columnWeight="1"
          android:gravity="center"
          android:text="7"
          app:layout_column="0"
          app:layout_gravity="fill"
          app:layout_row="2" />

      <TextView
          android:id="@+id/n8"
          android:clickable="true"
          android:contentDescription="8"
          android:focusable="true"
          app:layout_rowWeight="1"
          app:layout_columnWeight="1"
          android:gravity="center"
          android:text="8"
          app:layout_column="1"
          app:layout_gravity="fill"
          app:layout_row="2" />

      <TextView
          android:id="@+id/n9"
          android:clickable="true"
          android:contentDescription="9"
          android:focusable="true"
          app:layout_rowWeight="1"
          app:layout_columnWeight="1"
          android:gravity="center"
          android:text="9"
          app:layout_column="2"
          app:layout_gravity="fill"
          app:layout_row="2" />

      <FrameLayout
          android:id="@+id/custom_key"
          android:layout_marginBottom="8dp"
          android:background="?selectableItemBackgroundBorderless"
          android:visibility="invisible"
          app:layout_rowWeight="1"
          app:layout_columnWeight="1"
          android:gravity="center"
          app:layout_gravity="fill"
          app:layout_column="0"
          app:layout_row="3" />

      <TextView
          android:id="@+id/n0"
          android:layout_marginBottom="8dp"
          android:clickable="true"
          android:contentDescription="0"
          android:focusable="true"
          app:layout_rowWeight="1"
          app:layout_columnWeight="1"
          android:gravity="center"
          android:text="0"
          app:layout_gravity="fill"
          app:layout_column="1"
          app:layout_row="3" />

      <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/backspace"
          android:layout_marginBottom="8dp"
          android:background="?selectableItemBackgroundBorderless"
          android:clickable="true"
          android:focusable="true"
          android:scaleType="center"
          android:src="@android:drawable/ic_menu_add"
          android:gravity="center"
          app:layout_gravity="fill"
          app:layout_rowWeight="1"
          app:layout_columnWeight="1"
          app:layout_column="2"
          app:layout_row="3" />
   </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
